@model Movie

<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" alt="@Model.Title" height="500" width="300"/>
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Director</p>
                <p class="card-text">
                    <ul>
                        @foreach (var actor in Model.Actors)
                        {
                            <li>@actor</li>
                        }
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>